    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/imgPswd1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_lock_outline_black_24dp"/>
        <EditText
            android:id="@+id/sign_pswd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgPswd1"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:background="@null"
            android:textCursorDrawable="@drawable/ic_first_page_black_24dp"
            android:hint="      请输入密码"
            android:layout_marginStart="10dp"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/pswd_over"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/sign_pswd"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/imgPswd2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_lock_outline_black_24dp"/>
        <EditText
            android:id="@+id/sign_pswd1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgPswd2"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:background="@null"
            android:textCursorDrawable="@drawable/ic_first_page_black_24dp"
            android:hint="      请再次输入密码"
            android:layout_marginStart="10dp"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/pswd1_over"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/sign_pswd1"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/imgCode"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_sms_black_24dp"/>
        <EditText
            android:id="@+id/sign_code"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgCode"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@null"
            android:textCursorDrawable="@drawable/ic_first_page_black_24dp"
            android:hint="      请输入验证码"
            android:layout_marginStart="10dp"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/code_over"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/sign_code"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/bt_code"
            android:layout_toEndOf="@id/code_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:background="@color/colorPrimary"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_false"
                android:text="取消"
                android:textColor="@color/black"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>