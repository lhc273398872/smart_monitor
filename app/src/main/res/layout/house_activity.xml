<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_page"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:id="@+id/currentHouseName"
            android:layout_centerHorizontal="true"
            android:text="仓库名称" />

        <LinearLayout
            android:id="@+id/llHouseTabTopRightButtonContainer"
            style="@style/ll_horizontal_wrap_wrap"
            android:layout_marginEnd="20dp"
            android:layout_height="@dimen/topbar_height"
            android:layout_alignParentRight="true"
            android:paddingEnd="10dp">
        </LinearLayout>

    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />

    <ScrollView
        style="@style/match_wrap">

        <LinearLayout style="@style/ll_vertical_match_match" >

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="备注" />

                <EditText
                    android:id="@+id/etHouseRemark"
                    style="@style/edit_item_right_et"
                    android:layout_weight="1"
                    android:maxLength="90"
                    android:hint="点击这里来编辑"
                    android:importantForAutofill="no" />

                <ImageView
                    android:id="@+id/ivHouseRemarkClear"
                    style="@style/edit_item_right_clear" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal_1px"
                android:layout_marginBottom="@dimen/padding_huge" />

            <View style="@style/divider_horizontal_1px" />

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/content_item_white" >

                <TextView
                    style="@style/content_item_lf_tv_black"
                    android:text="仓库名称" />

                <TextView
                    style="@style/content_item_rt_tv"
                    android:id="@+id/tvHouseName"
                    android:layout_weight="1"
                    android:text="" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/content_item_white" >

                <TextView
                    style="@style/content_item_lf_tv_black"
                    android:text="仓库大小" />

                <TextView
                    style="@style/content_item_rt_tv"
                    android:id="@+id/tvHouseSize"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    style="@style/content_item_rt_tv"
                    android:gravity="center|left"
                    android:text="平" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                style="@style/content_item_white" >

                <TextView
                    style="@style/content_item_lf_tv_black"
                    android:text="仓库位置" />

                <TextView
                    android:id="@+id/tvHouseLocation"
                    style="@style/content_item_rt_tv"
                    android:layout_weight="1"
                    android:text="请点击此处来选择仓库所在地" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />
        </LinearLayout>
    </ScrollView>

    <View
        style="@style/divider_horizontal_1px"
        android:layout_marginBottom="@dimen/padding_huge" />

    <LinearLayout
        android:id="@+id/llUserBottomMenuContainer"
        style="@style/ll_vertical_match_wrap" >
    </LinearLayout>

</LinearLayout>